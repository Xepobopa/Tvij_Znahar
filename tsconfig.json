{
  "compilerOptions": {
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["es2016", "esnext", "dom"],
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./dist",
        "strictPropertyInitialization": false,
        "resolveJsonModule": true
  },
  "exclude": ["./dist"]
}
